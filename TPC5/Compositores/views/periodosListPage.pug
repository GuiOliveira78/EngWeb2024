extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 
                span Lista de Períodos
                    
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Período
                
                each periodo in periodos
                    tr
                        td
                            a(href="/periodos/" + periodo.id)= periodo.id
                        td
                            a(href="/periodos/" + periodo.id)= periodo.periodo
                        
    
    
        footer.w3-container.w3-blue
            h5 Generated by Guilherme Oliveira in #{date}