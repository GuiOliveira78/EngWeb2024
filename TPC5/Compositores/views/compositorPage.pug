extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 Compositor #{compositor.id}

        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                    li
                        b Nome:
                        span= compositor.nome
                    li
                        b Data de Nascimento:
                        span= compositor.dataNasc
                    li
                        b Data de Óbito:
                        span= compositor.dataObito
                    li
                        b Período:
                        span= compositor.periodo
                    li
                        b Biografia:
                        span= compositor.bio

        .w3-container.w3-margin-8
            ul.w3-ul
            
    

        footer.w3-container.w3-teal
            address
                span Gerado por Guilherme Oliveira em #{date} - [
                a(href="/") Voltar
                span ]